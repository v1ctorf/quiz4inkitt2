<div class="row"> 
  <div class="col-md-offset-3 col-md-6">
    <h1>Quiz - Distribution for Answers</h1>
  </div>
</div>

<div class="row"> 
  <div class="col-md-offset-3 col-md-6">
    <table class="table table-striped table-condensed">
      <tr>
        <th>ip</th>
        <th>question</th>
        <th>answer</th>
        <th>delete</th>
      </tr>
     
      <% @answers.each do |answer| %>
        <tr>
          <td><%= answer.ip %></td>
          <td><%= answer.question %></td>
          <td><%= answer.option %></td>
          <td><%= link_to 'Destroy', answer_path(answer),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
        <td><%= link_to 'Back', {controller:'answers'}, :class => "btn btn-primary pull-right" %></td>
  </div>
</div>