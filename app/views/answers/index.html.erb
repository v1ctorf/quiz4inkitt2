<div class="row"> 
  <div class="col-md-offset-3 col-md-6">
    <h1>Quiz - Distribution for Answers</h1>
  </div>
</div>

<% @questions.each_with_index do |question,index| %>
  <div class="row"> 
    <div class="col-md-offset-3 col-md-6">
      <table class="table table-striped table-condensed">
        <caption><%= question["question"] %></caption>
        <tbody>
          <% question["options"].each_with_index do |option,key| %>
            <tr>
              <td><%= option %></td>
              <td><%= @distribution[index][key] ? @distribution[index][key] : 0 %></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>